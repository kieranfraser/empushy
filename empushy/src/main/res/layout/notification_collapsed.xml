<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/my_background_shadow">

        <LinearLayout
            android:layout_width="0dp"
            android:background="@color/colorBlue"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:padding="5dp"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_notification_collapsed_need_attention"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="need attention"
                android:textSize="12sp"
                android:textColor="@color/white"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:background="@color/colorDarkBlue"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:padding="5dp"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_notification_collapsed_for_later"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="for later"
                android:textSize="12sp"
                android:textColor="@color/white"/>

        </LinearLayout>
    </LinearLayout>

