<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/app_background">

        <LinearLayout
            android:id="@+id/ll_magic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_app_summary_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/tv_app_summary_app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="App Summary Detail"
                android:padding="10dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:textSize="18dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <RadioGroup
                android:id="@+id/rg_app_summary_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <RadioButton
                    android:id="@+id/rb_app_summary_detail_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:text="Now"
                    android:checked="true"
                    android:gravity="center"
                    android:textColor="@color/white" />

                <RadioButton
                    android:id="@+id/rb_app_summary_detail_later"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Later"
                    android:textColor="@color/white"/>
            </RadioGroup>
        </LinearLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_app_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

                <!--List view-->
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_summary_dialog_notifications"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>



        </ScrollView>


        <Button
            android:layout_marginTop="5dp"
            android:id="@+id/bt_dialog_app_summary_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Okay"
            android:textColor="@color/white"
            android:background="@color/colorGold"/>
    </LinearLayout>




</LinearLayout>